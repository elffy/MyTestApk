<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_list_item_height"
    android:gravity="center_vertical"
    android:background="@drawable/nav_list_item_selector"
    android:paddingStart="12dp"
    android:paddingEnd="6dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/icon_type_music_selector" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/alpha_99_black_color"
        android:textSize="@dimen/nav_item_content_text_size" />

    <TextView
        android:id="@+id/sub_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingEnd="6dp"
        android:gravity="end"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/alpha_66_black_color"
        android:textSize="@dimen/nav_item_sub_content_text_size" />

</LinearLayout>
